<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <style name="EditTextHint">
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:textColorHint">#07beb8</item>
        <item name="colorControlNormal">@android:color/holo_orange_light</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <!--<item name="colorControlActivated">@color/your color</item>
        <item name="colorControlHighlight">@color/BackgroundtWhiteColor</item>-->
    </style>
    <style name="Toolbar.TitleText" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fafaff</item>
    </style>

</resources>
